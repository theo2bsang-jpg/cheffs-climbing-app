# Environment variables needed for deployment
# Copy this to .env and fill in the values

# Server Configuration
NODE_ENV=production
PORT=4000

# Security - CHANGE THESE!
JWT_SECRET=<generate-a-very-long-random-string-here>
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=<create-a-strong-password>

# CORS - Update with your frontend URL after deployment
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-url.onrender.com

# Database
DATA_DIR=/var/data/data.db

# Optional Cookie Names
COOKIE_NAME=cheffs_token
REFRESH_COOKIE_NAME=cheffs_refresh
